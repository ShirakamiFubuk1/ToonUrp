                half4 col = SampleAlbedoAlpha(uv, TEXTURE2D_ARGS(_BaseMap, sampler_BaseMap)) * _BaseColor;
                Light mainLight = GetMainLight(inputData.shadowCoord);
                half4 LightColor = half4(mainLight.color, 1.0);
                float3 lightDir = normalize(mainLight.direction);
                
                half halfLambert = dot(lightDir, inputData.normalWS) * 0.5 + 0.5;
                halfLambert *= mainLight.shadowAttenuation;
                halfLambert = smoothstep(saturate(_ShadowRange - _ShadowSmooth), _ShadowRange, halfLambert);

                half2 RampUV;
                RampUV.x = halfLambert;
                RampUV.x = clamp(RampUV.x, 0.00390625, 1 - 0.00390625);
                RampUV.y = 0.5;

                half4 rampColor = (SAMPLE_TEXTURE2D(_RampMap, sampler_RampMap, RampUV) * _ShadowColor,1);
                col.rgb = lerp(col.rgb*rampColor,col.rgb,halfLambert);

                //specular
                half3 specular = 0;
                BRDFData brdfData;
                InitializeBRDFData(surfaceData.albedo,surfaceData.metallic,surfaceData.specular,surfaceData.smoothness,surfaceData.alpha, brdfData);
                specular = surfaceData.metallic * DirectBRDFSpecular(brdfData, inputData.normalWS, lightDir, inputData.viewDirectionWS);
                col.rgb += specular * mainLight.shadowAttenuation;
                
                col.rgb *= LightColor;
                return col;
            }
            
            ENDHLSL
