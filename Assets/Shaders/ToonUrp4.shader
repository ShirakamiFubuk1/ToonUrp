                half4 color = SampleAlbedoAlpha(input.uv, TEXTURE2D_ARGS(_BaseMap, sampler_BaseMap));
                color.rgb *= _OutLineColor.rgb * GetMainLight().color;
                return color;
            }

            half4 CelShading(InputData inputData, SurfaceData surfaceData, float2 uv)
